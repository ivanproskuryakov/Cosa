{% for flashMessage in app.session.flashbag.get('notice') %}
    <div class="alert alert-info alert-dismissable notificationMessages">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        {{ flashMessage }}
    </div>
{% endfor %}
