{% extends '::base.html.twig' %}
{% block body %}

    <div class="page-header">
        <h3>{{ 'user.label.password_forgot'|trans({}, 'CosaUserBundle') }}</h3>
    </div>

    <div class="col-xs-12  col-sm-4 col-md-offset-4">
        {{ form_start(form) }}

            {{ form_errors(form) }}
            {{ form_errors(form.email) }}

            <div class="form-group">
                {{ form_label(form.email,'user.label.email'|trans({}, 'CosaUserBundle')) }}
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            {{ form_widget(form.save, {'label': 'user.form.submit'|trans({}, 'CosaUserBundle')}) }}

        {{ form_end(form) }}
    </div>

    {{ form_end(form) }}


{% endblock %}
