{% extends '::base.html.twig' %}
{% block body %}

    <div class="page-header">
        <h3>{{ 'user.label.sign_in'|trans({}, 'CosaUserBundle') }}</h3>
    </div>

    <div class="col-xs-12  col-sm-4 col-md-offset-4">
        {{ form_start(form) }}

            {{ form_errors(form) }}
            {{ form_errors(form.username) }}
            {{ form_errors(form.password) }}

            <div class="form-group">
                {{ form_label(form.username,'user.label.username'|trans({}, 'CosaUserBundle')) }}
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                    {{ form_widget(form.username, { 'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.password,'user.label.password'|trans({}, 'CosaUserBundle')) }}
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                    {{ form_widget(form.password, { 'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            {{ form_widget(form.save, {'label': 'user.form.submit'|trans({}, 'CosaUserBundle')}) }}
        {{ form_end(form) }}
        <a href="{{ path('cosa_user_passwordforgot') }}" class="pull-right">{{ 'user.label.password_forgot'|trans({}, 'CosaUserBundle') }}</a>
    </div>


{% endblock %}
