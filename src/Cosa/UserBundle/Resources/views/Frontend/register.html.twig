{% extends '::base.html.twig' %}
{% block body %}

    <div class="page-header">
        <h3>{{ 'user.label.create_account'|trans({}, 'CosaUserBundle') }}</h3>
    </div>


    <div class="col-xs-12  col-sm-4 col-md-offset-4">
        {{ form_start(form) }}

            {{ form_errors(form) }}
            {{ form_errors(form.email) }}
            {{ form_errors(form.username) }}

            <div class="form-group">
                {{ form_label(form.username,'user.label.username'|trans({}, 'CosaUserBundle')) }}
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                    {{ form_widget(form.username, { 'attr': {'class': 'form-control'}}) }}
                </div>

            </div>

            <div class="form-group">
                {{ form_label(form.email,'user.label.email'|trans({}, 'CosaUserBundle')) }}
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control'}}) }}
                </div>
            </div>


            <div class="form-group">
                {{ form_label(form.password.first,'user.label.password'|trans({}, 'CosaUserBundle')) }}
                {{ form_widget(form.password.first, { 'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.password.second,'user.label.password_repeat'|trans({}, 'CosaUserBundle')) }}

                {{ form_widget(form.password.second, { 'attr': {'class': 'form-control'}}) }}
            </div>
        {{ form_errors(form.password.first) }}
        {{ form_errors(form.password.second) }}


            {{ form_widget(form.save, {'label': 'user.form.submit'|trans({}, 'CosaUserBundle')}) }}

        {{ form_end(form) }}
    </div>

{% endblock %}
